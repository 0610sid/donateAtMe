<%- include('./partials/bootstrap.ejs') %>
    <link href="stylesheets/login.css" rel="stylesheet">
    <link href="stylesheets/navbar.css" rel="stylesheet">
    </head>

    <body>
        <%- include('./partials/navbar.ejs') %>
            <div class="contain">
                <div class="item1">
                </div>
                <div class="item2">
                </div>
                <div class="main">
                    <div id="rightdiv">
                        <h1 id="logintxt">Login</h1>
                        <div>
                            <form action="/login" method="post" class="needs-validation" novalidate autocomplete="off"
                                required>
                                <div class="userinput">
                                    <label for="uname" class="f-name">Username :</label><br>
                                    <input type="text" placeholder="Username" id="uname" class="f-control" name="username" required>
                                </div>
                                <div class="passinput">
                                    <label for="password" class="f-name">Password :</label><br>
                                    <input type="password" placeholder="Password" class="f-control" id="password"
                                        name="password" required><br>
                                    <input type="checkbox" onclick="myFunction()"> Show Password
                                </div>
                                <div>
                                    <button class="button">Login</button>
                            </form>
                            <form id="signform" method="get" action="/signup">
                                <button class="button">Signup</button>
                            </form>
                            <div id="flash"><%- include('./partials/flash.ejs') %></div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="javascripts/login.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                crossorigin="anonymous"></script>
    </body>
    </html>